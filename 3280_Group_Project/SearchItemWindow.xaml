<Window x:Class="_3280_Group_Project.SearchItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3280_Group_Project"
        mc:Ignorable="d"
        Title="SearchItemWindow" Height="300" Width="486.885">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DockPanel x:Name="menu_options" Margin="-2,-1,0,-2.2" Grid.RowSpan="2">
            <Menu DockPanel.Dock="Top" Background="#FF3F3B3B" Foreground="#FFFAF9F9" Margin="0,0,-2,0">
                <MenuItem Header="_Options" Foreground="#FFFAF9F9">
                    <MenuItem Header="_Edit Invoice" Foreground="#FF121111" Click="MenuItem_Click_1"/>
                    <MenuItem Header="_Exit" Foreground="#FF0F0F0F" Click="MenuItem_Click"/>
                </MenuItem>
            </Menu>
            <StackPanel/>
        </DockPanel>
        <DataGrid x:Name="dg_search_item" RenderTransformOrigin="0.437,0.027" Margin="-1,90,0,-0.2" Grid.RowSpan="2"/>

    </Grid>
</Window>
